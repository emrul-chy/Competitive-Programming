#include <bits/stdc++.h>
#define LL long long
using namespace std;

int main()
{
    LL k, t, a;
    scanf("%lld", &t);
    while(t--)
    {
        scanf("%lld", &k);
        a = abs(floor((1-(double)sqrt(1+(8*k)))/2.0));
        if((a * (a+1)) / 2 > k)
        {
            a--;
        }
        printf("%lld\n", a);
    }
    return 0;
}
